<?xml version="1.0" encoding="utf-8"?>
<e107Theme name="Sommerbrise" version="2.0.0" date="2021-04-09" compatibility="2.3.0">
	<author name ="Jimako" email="jimako@jimako.sk" url="https://e107.sk" />
	<summary>efiction skin by Artphilia ported for e107</summary>
	<description>efiction skin by Artphilia ported for e107</description>
	<category>generic</category>
	<plugins>
		<plugin name='gallery' url='core' />
		<plugin name='social' url='core' />
	</plugins>
	<keywords>
		<word>bootstrap</word>
		<word>clean</word>
	</keywords>
	<screenshots>
		<image>preview_sommerbrise.png</image>
	</screenshots>
	<stylesheets>
		<css file="style.css" name="Default"/>
	</stylesheets>
	<layouts>
		<layout name='index' title='Home Page' >
			<custompages>FRONTPAGE</custompages>
		</layout>
		<layout name='full' title='Full Page' >
			<custompages>forum</custompages>
		</layout>
        <layout name='default' title='Default layout' default='true' >
             <menuPresets>
				<area id='31'>
                    <menu name='online' />
					<menu name='search' />
					<menu name='news_categories' />
					<menu name='other_news' />
					<menu name='other_news2' />
					<menu name='blogcalendar' />
				</area>
                
			</menuPresets>
        </layout>     
		<layout name='efiction' title='Efiction Pages' >
			<custompages>:efiction</custompages>
             <menuPresets>
				<area id='31'>
                    <menu name='online' />
					<menu name='search' />
					<menu name='news_categories' />
					<menu name='other_news' />
					<menu name='other_news2' />
					<menu name='blogcalendar' />
				</area>
			</menuPresets>
		</layout> 
	</layouts>
    <themePrefs>
		<pref name='branding'>logo</pref>
	</themePrefs>
</e107Theme>